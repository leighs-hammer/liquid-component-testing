<div class="row customer-account customer-login">
  <div class="container">
    {% comment %} Account Begins {% endcomment %}
    <h1 class="customer-account-title">{{ 'customer.account.title' | t }}</h1>
    

    {% comment %}  {% endcomment %}
    <div class="flex-side-by-side">
      {% comment %} Account Login - forgot form - begin {% endcomment %}
      <div class="flex-50">
        <div id="CustomerLoginForm">
          {% form 'customer_login' %}
            <h1>{{ 'customer.login.title' | t }}</h1>

            {{ form.errors | default_errors }}

            <label for="CustomerEmail" class="label-hidden">
              {{ 'customer.login.email' | t }}
            </label>
            <input type="email"
              name="customer[email]"
              id="CustomerEmail"
              class="{% if form.errors contains 'email' %}input-error{% endif %}"
              placeholder="{{ 'customer.login.email' | t }}"
              spellcheck="false"
              autocomplete="off"
              autocapitalize="off"
              autofocus>

            {% if form.password_needed %}
              <label for="CustomerPassword" class="label-hidden">
                {{ 'customer.login.password' | t }}
              </label>
              <input type="password"
                name="customer[password]"
                id="CustomerPassword"
                class="{% if form.errors contains 'password' %}input-error{% endif %}"
                placeholder="{{ 'customer.login.password' | t }}">
            {% endif %}

            <input type="submit" class="button btn btn-rounded-full" value="{{ 'customer.login.sign_in' | t }}">

            {% comment %} 
              Uncomment for a return to store 
              <a href="/">{{ 'customer.login.cancel' | t }}</a>
            {% endcomment %}


            {% if form.password_needed %}
              <a href="#recover" id="RecoverPassword">{{ 'customer.login.forgot_password' | t }}</a>
            {% endif %}
          {% endform %}

        </div>

        <div id="RecoverPasswordForm" class="hide">
          {% comment %} Message Start {% endcomment %}
            <div class="form-success hide" id="ResetSuccess">
              {{ 'customer.recover_password.success' | t }}
            </div>
          {% comment %} Message End {% endcomment %}
          <h1>{{ 'customer.recover_password.title' | t }}</h1>
          <p>{{ 'customer.recover_password.subtext' | t }}</p>

          {% form 'recover_customer_password' %}
            {{ form.errors | default_errors }}

            {% if form.posted_successfully? %}
              <span class="hide reset-password-success"></span>
            {% endif %}

            <label for="RecoverEmail" class="label-hidden">
              {{ 'customer.recover_password.email' | t }}
            </label>
            <input type="email"
              name="email"
              id="RecoverEmail"
              placeholder="{{ 'customer.recover_password.email' | t }}"
              spellcheck="false"
              autocomplete="off"
              autocapitalize="off">

            <input type="submit" class="button btn btn-rounded-full" value="{{ 'customer.recover_password.submit' | t }}" >

            <span id="HideRecoverPasswordLink">
              {{ 'customer.recover_password.cancel' | t }}
            </span>

          {% endform %}

        </div>

        {% if shop.checkout.guest_login %}
          <h2>{{ 'customer.login.guest_title' | t }}</h2>

          {% form 'guest_login' %}
            <input type="submit" class="button" value="{{ 'customer.login.guest_continue' | t }}">
          {% endform %}
        {% endif %}
      
      </div>
      {% comment %} Account Login - forgot form - end {% endcomment %}
      <div class="flex-50 customer-register-incentive">
        <h1>{{ 'customer.register.title' | t }}</h1>
        <p>{{ 'customer.register.reason_title' | t }}</p>
        {% assign reasons = 'customer.register.reasons' | t | split: ','  %}
        {% if reasons.size > 0 %}
          <ul>
            {% for reason in reasons %}
              <li>{{reason}}</li>
            {% endfor %}
          </ul>
        {% endif %}

        <a href="/account/register" class="btn btn-lines">
          {{ 'layout.customer.create_account' | t }}
        </a>
      </div>
    </div>

    {% comment %} Account Ends {% endcomment %}
  </div>
</div>


