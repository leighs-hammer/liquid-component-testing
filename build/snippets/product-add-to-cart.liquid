<div class="product-add-to-cart">
  <input type="number" id="Quantity" name="quantity" value="1" min="1" data-product-quantity>
  <button
    type="submit"
    name="add"
    data-add-to-cart
    {% unless current_variant.available %}disabled="disabled"{% endunless %}>
    <span data-add-to-cart-text>
      {% if current_variant.available %}
      {{ 'products.product.add_to_cart' | t }}
      {% else %}
      {{ 'products.product.sold_out' | t }}
      {% endif %}
    </span>
  </button>
</div>

<script>
  (function() {
    document.addEventListener("DOMContentLoaded", function(event) {
      if(typeof window.addToCartHelpers === 'object') {
        window.addToCartHelpers.addStorageEvents()
        window.addToCartHelpers.addEventListeners()
        window.addToCartHelpers.saturateCountFromStorage()
      }
    })
  })()
</script>