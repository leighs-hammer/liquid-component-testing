<h1 class="product-title">{{ product.title }}</h1>

    <div class="price-wrapper" data-price-wrapper>
      <span class="price-current" data-product-price>
        {% if current_variant.compare_at_price > current_variant.price %}
          NOW
        {% endif %}
        {{ current_variant.price | money }}
      </span>

      {% if product.compare_at_price_max > product.price %}
        <span class="visually-hidden" data-compare-text> {{ 'products.product.regular_price' | t }}</span>
          <span class="price-was">
            {% if current_variant.compare_at_price > current_variant.price %}
            <s data-compare-price> {{ current_variant.compare_at_price | money }}</s>
          </span>
          <span class="price-saving">
            SAVE 
            <span data-compare-price-difference>{{current_variant.compare_at_price | minus: current_variant.price | money}}</span>
            {% endif %}
          </span>
        
      {% endif %}
    </div>
 
  <form action="/cart/add" method="post" enctype="multipart/form-data">
    {% include 'options-drop-down' %}
    {% include 'product-add-to-cart' %}
    {% include 'product-countdown' %}
  </form>